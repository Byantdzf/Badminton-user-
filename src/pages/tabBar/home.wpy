          <!--                 class="icon"></image>-->
          <!--          <span class="white font_24">18:00 - 22:00</span>-->
          <!--        </view>-->
          <!--        <view class="_btn text-center" wx:if="{{item == 0}}">已开始</view>-->
          <view class="_btn _btnA text-center color-theme">立即观看</view>
        </view>
      </block>
