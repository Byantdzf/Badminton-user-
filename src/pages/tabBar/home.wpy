<script>
import wepy from 'wepy'
import {service} from '../../config.js'
import http from '../../mixins/http'
import base from '../../mixins/base'
import user from '../../mixins/user'
// import ShareMessage from '../../mixins/ShareMessage'

let date = new Date()
export default class home extends wepy.page {
  mixins = [base, http, user]
  config = {
    navigationBarTitleText: '课程首页',
    onReachBottomDistance: 10,
    enablePullDownRefresh: true
  }
  components = {}

  data = {
    cycleList: [], // 周期
    categories: [], // 分类
    list: [],
    city: '深圳',
    region: ['广东省', '深圳市', '南山区'],
    customItem: '全部',
    carousels: [],   // 轮播
    myLat: '',
    myLong: '',
    hide: true,
    searchTime: '',
    chnNumChar: {
      1: '一',
      2: '二',
      3: '三',
      4: '四',
      5: '五',
      6: '六',
      7: '日'
    },
    id: '',
    cardCur: 0,
    // league:团课，online:网课
    type: 'league',
    active: 0,
    token: wx.getStorageSync('token'),
    modalName: 'hide',
    throttle: true, // 节流
    day: '',
    page: 1,
    courses: [],
    actEndTime: '2020-4-19 18:50:00',
    refresh: false // 是否刷新
  }

  computed = {}

  async onLoad(e) {
    this.myLong = wx.getStorageSync('myLong')
    this.myLat = wx.getStorageSync('myLat')
    this.$apply()
    this.getDate()
    this.getRules()
    this.upDate()
  }

  onShow() {
    let vm = this
    vm.cardCur = 0
    vm.token = wx.getStorageSync('token')
    vm.$apply()
    wx.getSetting({
      success: res => {
        // 已授权
        if (res.authSetting['scope.userLocation']) {
          console.log('已授权定位')
          // that.getLocation()
          vm.modalName = ''
          vm.$apply()
        } else if (res.authSetting['scope.userLocation'] === undefined) {
          console.log('初次授权定位')
          // 尚未授权
          vm.getCenterLocation()
        } else if (res.authSetting['scope.userLocation'] === false) {
          console.log('拒绝授权定位')
          vm.modalName = 'Modal'
          vm.$apply()
        }
      }
    })
  }
  onPullDownRefresh() {
    this.page = 1
    this.upDate()
  }
  onReachBottom() {
    setTimeout(() => {
      this.upDate()
    }, 200)
  }
  timeFormat(param) {
    return param < 10 ? '0' + param : param
  }

  dealTime(dayNum, dat) {
    // 处理时间的方法
    if (dayNum == '0') {
      dayNum = 7
    }
    var uom = new Date(), dateStr = '', fday = ''
    fday = dat.substring(6, 8)
    uom.setYear(dat.substring(0, 4))
    uom.setMonth(parseInt(dat.substring(4, 6)) - 1)
    uom.setDate(fday)
    if (uom.getDay() == 0) {
      uom.setDate(uom.getDate() - (7 - dayNum))
    } else {
      uom.setDate(uom.getDate() - (uom.getDay() - dayNum))
    }
    var mon = (uom.getMonth() + 1) + ''
    if (mon.length != 2) {
      mon = '0' + mon
    }
    var day = uom.getDate() + ''
    if (day.length != 2) {
      day = '0' + day
    }
    dateStr = '' + uom.getFullYear() + mon + day
    let dateObj = {
      dateTime: `${mon}.${day}`,
      week: `周${this.chnNumChar[dayNum]}`,
      active: this.searchTime == dateStr ? true : false
    }
    console.log(dateObj, 'asssearchTime', this.searchTime, dateStr)
    this.cycleList.push(dateObj)
    return dateStr
  }

  getDate() {
    var now = new Date()
    var year = now.getFullYear()       // 年
    var month = now.getMonth() + 1     // 月
    var day = now.getDate()            // 日
    var clock = year + '-'
    if (month < 10) { clock += '0' }
    clock += month + '-'
    if (day < 10) { clock += '0' }
    clock += day
    console.log(clock.split('-').join(''), 'clock')
    let date = {}
    this.day = clock
    this.searchTime = clock.split('-').join('')
    date.mon = '周一 - ' + (this.dealTime(1, this.searchTime))
    date.tue = '周二 - ' + (this.dealTime(2, this.searchTime))
    date.wed = '周三 - ' + (this.dealTime(3, this.searchTime))
    date.thu = '周四 - ' + (this.dealTime(4, this.searchTime))
    date.fri = '周五 - ' + (this.dealTime(5, this.searchTime))
    date.sat = '周六 - ' + (this.dealTime(6, this.searchTime))
    date.sun = '周日 - ' + (this.dealTime(0, this.searchTime))
    console.log(date)
  }
  getRules() {
    let vm = this
    let url = `${service.host}/course/categories`
    vm.$get({
      url: url
    }, {
      success: ({code, data}) => {
        vm.categories = data
        vm.$apply()
        console.log(data)
      },
      fail: ({code, data}) => {
      },
      complete: () => {
      }
    })
  }
  upDate() { // 获取基本数据
    let vm = this,
      data = {
        page: vm.page,
        type: vm.type,
        city: vm.region[1],
        latitude: vm.myLat || '22.519517',
        longitude: vm.myLong || '113.920928',
        date: vm.day
      }
    // if (!vm.myLat || !vm.myLon) {
    //   vm.modalName = 'Modal'
    //   vm.$apply()
    // }
    if (vm.type == 'online') { data.category_id = vm.categories[vm.active].id }
    let url = `${service.host}/home`
    vm.$get({
      url: url, data
    }, {
      success: ({code, data}) => {
        this.carousels = data.carousels
        // this.carousels = [
        //   {pic: 'https://images.ufutx.com/202012/11/d2a4d36cc1e8b9d3dfb557b0b01c7402.jpeg', path: 'https://www.baidu.com'},
        //   {pic: 'https://images.ufutx.com/202012/11/14e5cdef31285ba610932a4ebcf2c8bd.jpeg', path: 'https://www.baidu.com'},
        //   {pic: 'https://images.ufutx.com/202012/11/9b027150741f47bc83feb4fb7855dbae.jpeg', path: 'https://www.baidu.com'}
        // ]
        this.$apply()
        if (!data.courses.data.length) {
          return console.log('没有更多了')
        }
        if (vm.page == 1) {
          vm.courses = data.courses.data
          vm.$apply()
        } else {
          data.courses.data.map(function (item, index) {
            vm.courses.push(item)
            vm.$apply()
          })
        }
        vm.page += 1
        vm.$apply()
        console.log(vm.courses, 'asaaa')
      },
      fail: ({code, data}) => {
      },
      complete: () => {
        wx.hideLoading()
      }
    })
  }

  getCenterLocation() {
    let that = this
    wx.getLocation({
      type: 'gcj02',
      success: function (res) {
        that.myLong = res.longitude
        that.myLat = res.latitude
        that.$apply()
        if (!wx.getStorageSync('myLong')) {
          wx.setStorageSync('myLong', res.longitude)
          wx.setStorageSync('myLat', res.latitude)
          setTimeout(() => {
            return that.upDate()
          }, 500)
        }
        wx.setStorageSync('myLong', res.longitude)
        wx.setStorageSync('myLat', res.latitude)
        that.$apply()
        console.log(that.modalName, 'that.modalName')
      },
      fail: function () {
        that.$showToast('获取失败')
        that.modalName = 'Modal'
        that.$apply()
      }
    })
  }
  methods = {
    openSetting_address(e) {
      let that = this
      this.$apply()
      let res = e.detail
      console.log(e.detail.authSetting, 'e.detail.authSetting')
      // if (res.authSetting['scope.userLocation']) {
      //   console.log('已授权定位')
      //   that.getLocation()
      // } else if (res.authSetting['scope.userLocation'] === undefined) {
      //   console.log('初次授权定位') // 尚未授权
      //   that.getLocation()
      // } else if (res.authSetting['scope.userLocation'] === false) {
      //   console.log('拒绝授权定位')
      //   util.WXModel('无法获取当前位置，请手动开启授权', true, () => {
      //     wx.openSetting({
      //       success: function (data) {
      //         if (data.authSetting['scope.userLocation']) {
      //           console.log('打开设置授权定位')
      //           that.getLocation()
      //         }
      //       }
      //     })
      //   }, () => {
      //     util.WXToast('请手动输入当前位置')
      //   })
      // }
      if (!e.detail.authSetting['scope.userLocation']) {
        this.getCenterLocation()
      }
    },
    gotoDetaile(index) {
      let {type} = this.courses[index],
        url = ''
      if (type == 'trial') {
        url = `/pages/homePage/trialDetaile?id=${this.courses[index].id}`
      } else {
        url = `/pages/homePage/taemDetaile?id=${this.courses[index].id}`
      }
      this.$goto(url)
    },
    bindRegionChange (e) {
      console.log('picker发送选择改变，携带值为', e.detail.value)
      this.region = e.detail.value
      this.$apply()
      this.courses = []
      this.page = 1
      this.upDate()
    },
    tabFnV2(val) {
      let vm = this
      vm.courses = []
      vm.page = 1
      vm.active = val
      vm.$apply()
      vm.upDate()
    },
    tabFn(val) {
      let vm = this
      vm.courses = []
      vm.page = 1
      vm.type = val
      vm.$apply()
      vm.upDate()
    },
    gotoLink(link) {
      console.log(link)
      this.$gotoH5(link)
    },
    hideModal() {
      this.modalName = 'hide'
      this.$apply()
    },
    gotoDetail(id) {
      if (!this.token) {
        // this.modalName = 'Modal'
        this.$apply()
        return
      }
      this.$goto(`/pages/home/information?id=${id}`)
    },
    cardSwiper(e) {
      this.cardCur = e.detail.current
      this.$apply()
      // console.log(this.cardCur, 'this.cardCur')
    },
    goto(url) {
      // this.modalName = ''
      this.$apply()
      console.log(url)
      this.$goto(url)
    },
    clickData(index) {
      console.log(index)
      for (let item of this.cycleList) {
        console.log(item)
        item.active = false
      }
      this.cycleList[index].active = true
      this.day = this.cycleList[index].dateTime
      this.page = 1
      this.$apply()
      this.upDate()
      console.log(this.cycleList[index].dateTime)
    }
  }
  events = {
    'modalValue': (value) => { // 搜索返回值
      // this.modalName = value
      this.$apply()
    }
  }
}
</script>

