          <view class="text-center"><view class="datItem inline-block color-666 font_24  {{item.active?'activeBox bold radius shadow bg-white':''}}" @tap="clickData({{index}})" wx:for="{{cycleList}}" wx:key="this">{{item.week}}</view></view>
