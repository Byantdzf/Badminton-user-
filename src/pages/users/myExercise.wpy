        </view>
      </view>
    </view>
    <block wx:if="{{active == '1'}}">
      <view class="height160"></view>
      <view class="mainBtn">
        <button class="btn text-center font_30 btn-box radius shadow bg-blue margin-top send bold"  hover-class="btn_active"  @tap="goto('/pages/users/uploadVideo')">上传
        </button>
      </view>
