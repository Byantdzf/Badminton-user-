<script>
import wepy from 'wepy'
import {service} from '../../config.js'
import http from '../../mixins/http'
import base from '../../mixins/base'
import user from '../../mixins/user'
// import ShareMessage from '../../mixins/ShareMessage'

let date = new Date()
export default class home extends wepy.page {
  mixins = [base, http, user]
  config = {
    navigationBarTitleText: '运动轨迹',
    onReachBottomDistance: 10,
    enablePullDownRefresh: true
  }
  components = {}

  data = {
    noMore: false,
    loading: true,
    page: 1,
    cycleList: [], // 周期
    list: [],
    city: '深圳',
    swiperList: [
      {  // 轮播
        id: 0,
        link: 'https://baidu.com',
        url: 'https://ossweb-img.qq.com/images/lol/web201310/skin/big84000.jpg'
      }, {
        id: 1,
        link: 'https://baidu.com',
        url: 'https://ossweb-img.qq.com/images/lol/web201310/skin/big84001.jpg'
      }, {
        id: 2,
        link: 'https://baidu.com',
        url: 'https://ossweb-img.qq.com/images/lol/web201310/skin/big39000.jpg'
      }],
    searchTime: '',
    chnNumChar: {
      1: '一',
      2: '二',
      3: '三',
      4: '四',
      5: '五',
      6: '六',
      7: '七'
    },
    id: '',
    cardCur: 0,
    tabBox: 1,
    active: 1,
    token: wx.getStorageSync('token'),
    modalName: '',
    throttle: true, // 节流
    day: date,
    actEndTime: '2020-4-19 18:50:00',
    refresh: false // 是否刷新
  }

  computed = {}

  async onLoad(e) {
    // this.getDate()
  }

  onShow() {
    this.getList()
  }
  onPullDownRefresh() {
    this.page = 1
    this.getList()
  }
  onReachBottom() {
    setTimeout(() => {
      this.getList()
    }, 200)
  }
  getList() {   // 获取数据
    let vm = this,
      data = {
        page: vm.page,
        type: `${vm.active == 1 ? 'CLOCKIN' : 'TRAIN'}`
      }
    vm.loading = true
    let url = `${service.host}/user/video/logs`
    vm.$get({
      url: url, data
    }, {
      success: ({code, data}) => {
        vm.loading = false
        if (!data.data.length) {
          return console.log('没有更多了')
        }
        if (vm.page == 1) {
          vm.list = data.data
          vm.$apply()
        } else {
          data.data.map(function (item, index) {
            vm.list.push(item)
            vm.$apply()
          })
        }
        vm.noMore = true
        vm.page += 1
        vm.$apply()
        console.log(vm.list, 'asaaa')
      },
      fail: ({code, data}) => {
      },
      complete: () => {
        wx.hideLoading()
      }
    })
  }

  upDate() {
    let vm = this
    let url = `${service.host}/user/v3`
    vm.$get({
      url: url
    }, {
      success: ({code, data}) => {
        vm.is_approved = data.is_approved
        vm.is_profile = data.is_profile
        vm.$apply()
      },
      fail: ({code, data}) => {
      },
      complete: () => {
        wx.hideLoading()
      }
    })
  }

  methods = {
    saveFn(url) {  // 检索参数
      let vm = this
      // let data = {
      //   nickname: vm.name,
      //   birthday: vm.birthday
      // }
      vm.$goto(1)
      // this.ensureData(data)
    },
    tabFn(val) {
      let vm = this
      vm.$showLoading('加载中...')
      setTimeout(() => {
        vm.$hideLoading()
      }, 800)
      this.active = val
      this.page = 1
      this.getList()
      this.$apply()
    },
    gotoLink(link) {
      console.log(link)
      this.$gotoH5(link)
    },
    gotoDetaile() {
      let vm = this,
        url = ''
      if (vm.active == 1) {
        url = '/pages/users/clockVideoDetaile'
      } else {
        url = '/pages/users/drillVideoDetaile'
      }
      this.$goto(url)
    },
    goto(url) {
      console.log(url)
      this.$goto(url)
    }
  }
  events = {
  }
}
</script>

